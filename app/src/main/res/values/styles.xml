<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="faq_textColor">@color/faq_textColor_black</item>
        <item name="faq_textColorSecondary">@color/faq_textColorSecondary_black</item>
        <item name="preferenceIconColor">?android:attr/colorAccent</item>
        <item name="toolbarPopupStyle">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="itemBackgroundColor">@color/item_background_color_light</item>
        <item name="itemSelectedBackgroundColor">@color/item_selected_background_color_light</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
    </style>

    <style name="AppTheme.Red" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorPrimary_red</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_red</item>
        <item name="colorAccent">@color/colorAccent_red</item>
    </style>

    <style name="AppTheme.Pink" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorPrimary_pink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_pink</item>
        <item name="colorAccent">@color/colorAccent_pink</item>
    </style>

    <style name="AppTheme.Yellow" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorPrimary_yellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_yellow</item>
        <item name="colorAccent">@color/colorAccent_yellow</item>
    </style>

    <style name="AppTheme.Teal" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorPrimary_teal</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_teal</item>
        <item name="colorAccent">@color/colorAccent_teal</item>
    </style>

    <style name="AppTheme.Green" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorPrimary_green</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_green</item>
        <item name="colorAccent">@color/colorAccent_green</item>
    </style>

    <style name="AppTheme.Blue" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorPrimary_blue</item>
