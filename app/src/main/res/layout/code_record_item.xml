<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/text_margin_dp_16"
    android:layout_marginTop="@dimen/text_margin_dp_8"
    android:layout_marginEnd="@dimen/text_margin_dp_16"
    android:layout_marginBottom="@dimen/text_margin_dp_8"
    app:cardCornerRadius="@dimen/text_margin_dp_6"
    app:cardElevation="@dimen/text_margin_dp_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/code_record_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/text_margin_dp_16"
        android:paddingBottom="@dimen/text_margin_dp_16">

        <TextView
            android:id="@+id/company_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/smscode_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/record_details_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="?attr/preferenceIconColor"
            android:text="@string/message_details"
            android:textSize="14sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>